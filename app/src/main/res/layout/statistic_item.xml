<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/padding_statistic_item"
    android:orientation="vertical">
    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/mitr_regular"
        android:textColor="?colorSecondary"
        android:textSize="@dimen/textsize_statistic_item_name"
        />
    <TextView
        android:id="@+id/tv_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/mitr_bold"
        android:textColor="?colorSecondary"
        android:textSize="@dimen/textsize_statistic_item_number"
        />

</androidx.appcompat.widget.LinearLayoutCompat>